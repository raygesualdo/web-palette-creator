{
  "name": "web-palette-creator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.7",
    "@types/react": "^16.14.2",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.10",
    "@types/tinycolor2": "^1.4.2",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "tinycolor2": "^1.4.2",
    "typescript": "^4.1.2",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "tailwind:build": "tailwind build src/tailwind.css -o src/tailwind.output.css",
    "tailwind:watch": "chokidar 'src/**/*.css' --ignore src/tailwind.output.css -c 'npm run tailwind:build'",
    "react:start": "react-scripts start",
    "start": "npm-run-all tailwind:build --parallel tailwind:watch react:start",
    "prebuild": "npm run tailwind:build",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "tailwindcss": "^2.0.1"
  }
}
